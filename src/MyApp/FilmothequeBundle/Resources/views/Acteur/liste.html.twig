<table class="table">
	<tr>

	     <th>Nom</th>
	     <th>Prenom</th>
		<th>Date de naissance</th>
		<th>Sex</th>
	</tr>
{% for a in acteurs %}
	<tr>
		<td><a href="{{path('myapp_acteur_listerunique',{'id': a.id}) }}" style="text-decoration:none">{{ a.nom }}</a></td>
		<td><a href="{{path('myapp_acteur_listerunique',{'id': a.id}) }}" style="text-decoration:none">{{ a.prenom }}</a></td>
		<td>{{ a.dateNaissance|date('d/m/Y') }}</td>
		<td>{{ a.sexe }}</td>
		{# {% for f in  a.films %}
					<td>{{f.titre}} </td>
				{% endfor %} #}
		<td><a href="{{ path('myapp_acteur_modifier', { 'id': a.id }) }}">Modifier</a></td>
		<td><a href="{{ path('myapp_acteur_supprimer', { 'id': a.id }) }}">Supprimer</a></td>
	</tr>
{% else %}
	<tr><td>Aucun acteur n'a été trouvé.</td></tr>
{% endfor %}

</table>